apiVersion: rbac.authorization.k8s.io/v1
kind: Role
metadata:
  namespace: lsj
  name: pod-reader
rules:
- apiGroups: [""]
  resources: ["pods"]
  verbs: ["get", "watch", "list"]
---
apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: read-pods
  namespace: lsj
subjects:
- kind: ServiceAccount
  name: example-serviceaccount
  namespace: lsj
roleRef:
  kind: Role
  name: pod-reader
  apiGroup: rbac.authorization.k8s.io